@model multishopbd.Models.Product

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Your daily deal: @Model.ProductName</h3>
    </div>
    <div class="panel-body">
        <p>
            <img alt="@Model.ProductName" src="@Url.Content(@Model.ProductDetails)" />
        </p>
        <div id="album-details">
            <p>
                <em>Artist:</em>
                @Model.ProductName
            </p>
            <p>
                <em>Price:</em>
                @String.Format("{0:F}", Model.RegularPrice)
            </p>
            @Html.ActionLink("Add to cart", "AddToCart", "ShoppingCart",
new { id = Model.ProductId },
new { @class = "btn btn-primary" })
        </div>
    </div>
</div>
